<?php
//Connection to the base
$base = mysql_connect ('server', 'login', 'pass');
mysql_select_db('my_base', $base);
?>
<html>
<head>
<title>Temperature history</title>
</head>
<body>
<?php
//launch of the request (no condition)
//Temperature and name of the sensor from the database
$sql = 'SELECT temperature, name FROM list';
//launch request ( mysql_query) and message of error if fail
$req = mysql_query($sql) or die('SQL Error ! < br />'.$sql.'<br />'.mysql_error());
//scan of all tuples
while ($data = mysql_fetch_array($req))
	{//print results
		echo 'Name : '.$data['name'].'<br />';
		echo 'Temperature : '.$data['temperature'].'<br /><br />';
	}
mysql_free_result ($req);
mysql_close();
?>
</body>
